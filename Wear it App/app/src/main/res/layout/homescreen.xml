<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activites.MainActivity">


    <FrameLayout
        android:id="@+id/fl_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue"/>


    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/homepage_text1"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center|top"/>
    <TextView
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/homepage_text2"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center|top"/>

    <TextView
        android:id="@+id/brandHead"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/homepage_text3"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center|top"/>

    <ImageView
        android:id="@+id/logos"
        android:layout_width="match_parent"
        android:layout_marginTop="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/logos"
        app:layout_constraintTop_toBottomOf="@id/header_logo" />

</RelativeLayout>


