<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activites.MainActivity">

<FrameLayout
    android:id="@+id/fl_wrap"
    android:layout_width="match_parent"
    android:layout_above="@+id/bottom_nav"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_blue"
        app:itemBackground="@color/light_blue"
        app:itemIconTint="@color/dark_blue"
        app:itemTextColor="@color/dark_blue"
        app:menu="@menu/nav_menu"/>
    <ImageView
        android:id="@+id/header_logo"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/login_title"/>
<TextView
    android:layout_marginTop="150dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="@string/homepage_text1"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:gravity="center|top"/>
</RelativeLayout>